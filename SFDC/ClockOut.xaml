<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SFDC.ClockOut"
             Title="ClockOut">

    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto, Auto, Auto"
          ColumnDefinitions="*, *"
          Padding="40">

        <Label Text="Employee No." 
               FontSize="32" 
               FontAttributes="Bold" 
               Grid.Row="0" 
               Grid.Column="0"/>
        
        <Entry HeightRequest="125" 
               FontSize="40" 
               FontAttributes="Bold"
               Grid.Row="1" 
               Grid.ColumnSpan="2"/>

        <Button Text="Back"
                Clicked="BackToMain"
                BackgroundColor="CornflowerBlue"
                TextColor="White"
                FontSize="42"
                HeightRequest="150"
                Margin="5"
                Grid.Row="2"
                Grid.Column="0"/>

        <Button Text="Clock Out"
                Clicked="BackToMain"
                BackgroundColor="#ff4d4d"
                TextColor="White"
                FontSize="42"
                HeightRequest="150"
                Margin="5"
                Grid.Row="2"
                Grid.Column="1"/>

    </Grid>
</ContentPage>
